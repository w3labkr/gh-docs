{
    "name": "gh-docs",
    "version": "1.2.8",
    "description": "A single page document HTML template using an iframe.",
    "main": "index.js",
    "scripts": {
        "clean:dir": "rm -rf node_modules",
        "clean:cache": "npm cache clean --force",
        "clean": "npm run clean:dir && npm run clean:cache",
        "build": "npm run clean && npm install",
        "prepare": "husky install",
        "release": "standard-version"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/w3labkr/gh-docs.git"
    },
    "keywords": [],
    "author": "W3LabKr",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/w3labkr/gh-docs/issues"
    },
    "homepage": "https://github.com/w3labkr/gh-docs#readme",
    "devDependencies": {
        "@babel/core": "^7.18.2",
        "@babel/preset-env": "^7.18.2",
        "@commitlint/cli": "^17.0.2",
        "@commitlint/config-conventional": "^17.0.2",
        "@types/gulp-imagemin": "^7.0.3",
        "autoprefixer": "^10.4.7",
        "browserslist": "^4.20.3",
        "cssnano": "^5.1.9",
        "del": "^6.1.1",
        "eslint": "^8.14.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "gulp": "^4.0.2",
        "gulp-babel": "^8.0.0",
        "gulp-concat": "^2.6.1",
        "gulp-file-include": "^2.3.0",
        "gulp-header": "^2.0.9",
        "gulp-imagemin": "^7.1.0",
        "gulp-jsbeautifier": "^3.0.1",
        "gulp-postcss": "^9.0.1",
        "gulp-rename": "^2.0.0",
        "gulp-sass": "^5.1.0",
        "gulp-sourcemaps": "^3.0.0",
        "gulp-uglify": "^3.0.2",
        "husky": "^8.0.1",
        "js-beautify": "^1.14.3",
        "lint-staged": "^13.0.1",
        "merge-stream": "^2.0.0",
        "postcss": "^8.4.14",
        "prettier": "^2.6.2",
        "sass": "^1.52.1",
        "standard-version": "^9.5.0",
        "stylelint": "^14.8.2",
        "stylelint-config-prettier-scss": "^0.0.1",
        "stylelint-config-rational-order": "^0.1.2",
        "stylelint-config-recommended-scss": "^6.0.0",
        "stylelint-order": "^5.0.0",
        "stylelint-scss": "^4.2.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/*.{htm, html}": [
            "js-beautify --type 'html' --replace"
        ],
        "src/*.{css, scss, less, postcss}": [
            "stylelint --fix",
            "prettier --write"
        ],
        "src/*.{js, jsx}": [
            "eslint --fix",
            "prettier --write"
        ]
    }
}
